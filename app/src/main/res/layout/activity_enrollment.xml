<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewSubjectList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Subjects"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />


        <ListView
            android:id="@+id/listViewSubjects"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Enrollment"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/buttonViewSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Summary"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
